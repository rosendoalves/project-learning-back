# ============================================
# Configuración del Servidor
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Base de Datos MongoDB
# ============================================
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ============================================
# Autenticación JWT
# ============================================
JWT_SECRET=tu_secreto_jwt_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# ============================================
# OpenAI API Configuration
# ============================================
# Obtén tu API Key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-tu_api_key_de_openai_aqui

# Modelos de IA (opcional, valores por defecto)
OPENAI_SIMPLE_MODEL=gpt-3.5-turbo
OPENAI_ADVANCED_MODEL=gpt-4o-mini
OPENAI_GRADING_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ============================================
# Configuración de Cache
# ============================================
CACHE_TTL_SYLLABUS=30
CACHE_TTL_TOPIC=30
CACHE_TTL_EXERCISE=30
CACHE_TTL_EXPLANATION=30
CACHE_TTL_RECOMMENDATIONS=7

# ============================================
# Conversión de Moneda (USD a ARS)
# ============================================
USD_TO_ARS_RATE=1350

# ============================================
# Configuración de Jobs Programados
# ============================================
ENABLE_MEMBERSHIP_EXPIRATION_JOB=true
MEMBERSHIP_EXPIRATION_CRON=0 * * * *
CACHE_CLEANUP_CRON=0 2 * * *

# ============================================
# URLs del Frontend (CORS)
# ============================================
FRONTEND_URL=http://localhost:5173
ADMIN_FRONTEND_URL=http://localhost:5174

# ============================================
# Configuración de Email (Opcional)
# ============================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASSWORD=tu_password_de_aplicacion
# EMAIL_FROM=noreply@plataformaeducativa.com

# ============================================
# Configuración de Pagos (Opcional)
# ============================================
# MERCADOPAGO_ACCESS_TOKEN=tu_access_token_mercadopago
# STRIPE_SECRET_KEY=sk_test_tu_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_tu_stripe_publishable_key

# ============================================
# Configuración de Logs
# ============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
